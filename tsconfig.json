{
    "compilerOptions": {
        "sourceMap": true,
        "target": "esnext",
        "module": "esnext",
        // this enables stricter inference for data properties on `this`
        "strict": true,
        "jsx": "preserve",
        "moduleResolution": "node",
        // additional
        "esModuleInterop": true
    },
    "include": [
        "resources/ts/**/*.ts"
    ],
    "exclude": ["node_modules"]
}
