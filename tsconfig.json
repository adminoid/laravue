{
    "compilerOptions": {
        "sourceMap": true,
        "target": "esnext",
        "module": "esnext",
        // this enables stricter inference for data properties on `this`
        "strict": true,
        "jsx": "preserve",
        "moduleResolution": "node",
        // additional
        "esModuleInterop": true,
        "baseUrl": ".",
        "paths": {
            "A@/*": [
                "./resources/ts/admin-area/components/*"
            ]
        }
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "resources/ts/**/*.ts"
    ]
}
